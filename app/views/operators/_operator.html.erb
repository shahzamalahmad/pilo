<div>
	<table class="table table-bordered">
		<tr>
			
			<thead>
				<th scope="col", style="text-align: center;">

					Sr. No.	
				</th>
				<th scope="col", style="text-align: center;">

					OPERATOR's NAME
				</th>
				<th scope="col", style="text-align: center;">

					LOCATION
				</th>
				<th scope="col", style="text-align: center;">

					AREA
				</th>
				<th scope="col", style="text-align: center;">

					PLANT TYPE
				</th>
			</thead>
		</tr>
		<tr>
			<% @operators.each do |op| %>
				<tbody>
					<th scope="col", style="text-align: center;"> <%= link_to @i += 1,op %> </th>
					<th scope="col", style="text-align: center;" class="text-uppercase" %> 
						<%= link_to op.operator_name,op %>
					</th>
					<th scope="col", style="text-align: center;" class="text-uppercase" %> 
						<%= op.location %>
					</th>
					<th scope="col", style="text-align: center;" class="text-uppercase" %> 
						<%= op.area %>
					</th>
					<th scope="col", style="text-align: center;" class="text-uppercase" %> 
						<%= op.plant_type %>
					</th>
				</tbody>
			<% end %>
		</tr>
	</table>

</div>