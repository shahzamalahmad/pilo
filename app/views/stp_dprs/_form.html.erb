      </div>
    </div>
      <br>
    <div class="row align-items-start">
      <div class="col">
        <h5><%= form.label :blower_oil, style: "display: block" %> </h5>
        <%= form.radio_button :blower_oil, "5", value: 5 %> yes <br>
          <%= form.radio_button :blower_oil, '0', value: 0, checked:true %> no<br />

      </div>
      <br>
       <div class="col">
        <h5><%= form.label :compressor_oil, style: "display: block" %> </h5>
        <%= form.radio_button :compressor_oil, "5", value: 5 %> yes <br>
          <%= form.radio_button :compressor_oil, '0', value: 0, checked:true %> no<br />

      </div>
      
    </div>
      
      
      <br>
       <div class="col">
        <h5><% form.label :total_marks, style: "display: block" %> </h5>
        <% form.text_field :total_marks, class:"form-control"%>

